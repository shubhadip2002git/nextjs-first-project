generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

//for vercel

datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
}

//for localhost
// datasource db {
//   provider = "sqlite"
//   url      = env("DATABASE_URL")
// }

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  body      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
